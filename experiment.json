{
  "dataset_reader": {
    "type": "squad",
    "token_indexers": {
      "token_characters": {
        "type": "characters",
        "character_tokenizer": {
          "byte_encoding": "utf-8"
        }
      },
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "iterator": {
    "type": "bucket",
    "batch_size": 16,
    "sorting_keys": [
      [
        "passage",
        "num_tokens"
      ],
      [
        "question",
        "num_tokens"
      ]
    ]
  },
  "model": {
    "type": "bidaf",
    "dropout": 0.2,
    "modeling_layer": {
      "type": "lstm",
      "bidirectional": true,
      "dropout": 0.2,
      "hidden_size": 100,
      "input_size": 800,
      "num_layers": 2
    },
    "num_highway_layers": 2,
    "phrase_layer": {
      "type": "lstm",
      "bidirectional": true,
      "dropout": 0.2,
      "hidden_size": 100,
      "input_size": 700,
      "num_layers": 2
    },
    "similarity_function": {
      "type": "linear",
      "combination": "x,y,x*y",
      "tensor_1_dim": 200,
      "tensor_2_dim": 200
    },
    "span_end_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "dropout": 0.2,
      "hidden_size": 100,
      "input_size": 1400,
      "num_layers": 2
    },
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 600,
          "pretrained_file": "",
          "trainable": false
        },
        "token_characters": {
          "type": "character_encoding",
          "dropout": 0.2,
          "min_padding_length": 5,
          "embedding": {
            "embedding_dim": 16,
            "num_embeddings": 260
          },
          "encoder": {
            "type": "cnn",
            "embedding_dim": 16,
            "ngram_filter_sizes": [
              5
            ],
            "num_filters": 100
          }
        }
      }
    }
  },
  "train_data_path": "",
  "validation_data_path": "",
  "trainer": {
    "cuda_device": 0,
    "grad_norm": 5,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 2
    },
    "num_epochs": 20,
    "optimizer": {
      "type": "adam",
      "betas": [
        0.9,
        0.9
      ]
    },
    "patience": 10,
    "validation_metric": "+em"
  }
}